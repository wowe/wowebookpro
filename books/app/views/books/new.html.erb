<%= form_for :books, url: books_path do |f| %>  
    <p>    
        <%= f.label :name %><br>    
        <%= f.text_field :name %>  
    </p>   
    <p>    
        <%= f.label :desc %><br>    
        <%= f.text_area :desc %> 
    </p>
    <p>
        <%= f.label :summary %><br>
        <%= f.text_area :summary %>
    </p>
    <p>
        <%= f.label :category %><br>
        <%= f.text_area :category %>
    </p>
    <p>
        <%= f.label :page %><br>
        <%= f.text_area :page %>
    </p>
    <p>
        <%= f.label :publish_date %><br>
        <%= f.text_area :pubDate %>
    </p>
    <p>
        <%= f.label :update_date %><br>
        <%= f.text_area :updated %>
    </p>    
    <p>    
        <%= f.submit %>  
    </p>
<% end %>
